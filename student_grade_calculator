    private void resultActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        int m1,m2,m3,tm;
        float p;
        String g;
        m1= Integer.parseInt(t1.getText());
        m2= Integer.parseInt(t2.getText());
        m3= Integer.parseInt(t3.getText());
        tm= m1+m2+m3;
        p=(float)tm*100/300;
        if(p>=80){
            g="A";
        }
        else if(p>=60){
            g="B";
        }
        else{
            g="c";
        }
        t4.setText(String.valueOf(tm));
        t5.setText(String.valueOf(p));
        t6.setText(g);
}                                      

    private void rtActionPerformed(java.awt.event.ActionEvent evt) {                                   
        // TODO add your handling code here:
        t1.setText(null);
        t2.setText(null);
        t3.setText(null);
        t4.setText(null);
        t5.setText(null);
        t6.setText(null);
        t1.requestFocus();
    }                                  

    private void etActionPerformed(java.awt.event.ActionEvent evt) {                                   
        // TODO add your handling code here:
        System.exit(0);
    }                                  

